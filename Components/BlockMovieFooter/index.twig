        <div>{{ post.synopsisEnglish }}</div>
        <div>{{ post.synopsisArabic }}</div>
      </div>
      {% endif %}
      {% if post.cast %}
      <div class="cast">
        <h3>Cast</h3>
        {{ post.cast }}
      </div>
      {% endif %}
      {% if post.shareLinks %}
        <div class="sharelinks">
        <h3>Share</h3>
        {{ post.shareLinks }}
      </div>
      {% endif %}
