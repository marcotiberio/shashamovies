
<div class="flyntComponent componentSpacing {{ options.theme }}" is="flynt-grid-posts-archive">
  <div class="container container--fullWidth">
    {# <div class="preContent">
      <h1>{{ title }}</h1>
      {% set html = isHome ? preContentHtml : description %}
      {{ html|e('wp_kses_post') }}
    </div> #}
    {# {% if terms %}
      {% include 'Partials/_filter.twig' %}
    {% endif %} #}
    <div class="searchForm">
      <button class="searchForm-button button" type="submit" aria-label="search">Search</button>
      <form class="searchForm-input" role="search" action="{{ bloginfo('url') }}">
        <div class="searchForm-field">
          <div class="searchForm-box">
            <label class="visuallyHidden" for="searchForm-input">{{ searchPlaceholder }}</label>
            <input name="s" id="searchForm-input" class="searchForm-input" type="search" required placeholder="SEARCH FOR..." value="{{ searchQuery }}">
          </div>
        </div>
      </form>
    </div>
    <ul class="posts">
      {% for post in posts %}
        <li class="post">
          <a class="post-link" href="{{ post.link }}">
            {# {% if post.thumbnail %}
              <figure class="figure">
                <img class="figure-image lazyload"
                  src="{{ post.thumbnail.src|resizeDynamic(424, 283) }}"
                  srcset="{{ placeholderImage(3, 2) }}"
                  data-srcset="
                    {{ post.thumbnail.src|resizeDynamic(1920, 1280) }} 1920w,
                    {{ post.thumbnail.src|resizeDynamic(1320, 880) }} 1320w,
                    {{ post.thumbnail.src|resizeDynamic(1280, 853) }} 1280w,
                    {{ post.thumbnail.src|resizeDynamic(1050, 700) }} 1050w,
                    {{ post.thumbnail.src|resizeDynamic(750, 500) }} 750w,
                    {{ post.thumbnail.src|resizeDynamic(600, 400) }} 600w,
                    {{ post.thumbnail.src|resizeDynamic(424, 283) }} 424w,
                    {{ post.thumbnail.src|resizeDynamic(312, 208) }} 312w"
                  data-sizes="auto"
                  alt="{{ post.title }}">
              </figure>
            {% endif %} #}
          <div class="post-inner">
            <div class="post-title title">{{ post.title }}</div>
            <div class="post-title">{{ post.releaseDate }}</div>
            <div class="post-title">{{ post.director }}</div>
            <div class="post-title">{{ post.languageMovie }}</div>
            <div class="post-title">{{ post.movieDuration }}</div>
            {# {% if post.terms('category')  %}
                <ul class="tags">
                  {% for category in post.terms('category')  %}
                    <li class="tags-item"><a class="tags-itemLink" href="{{ category.link }}">{{ category }}</a></li>
                  {% endfor %}
                </ul>
            {% endif %} #}
            {# <p class="post-excerpt">{{ post.preview.read_more(false) }}</p> #}
            {# <a class="button button--link" href="{{ post.link }}" title="{{ post.title }}" aria-hidden="true" tabindex="-1">
              {{ labels.readMore }}
            </a> #}
          </div>
          </a>
        </li>
      {% else %}
        <p class="posts-empty">{{ labels.noPostsFound }}</p>
      {% endfor %}
    </ul>
    {% set pagination = posts.pagination %}
    {% if pagination.pages %}
      {% include 'Partials/_paginationButtons.twig' %}
    {% endif %}
  </div>
</div>
