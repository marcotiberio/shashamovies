{% if items|length > 0 %}
  <div class="flyntComponent" is="flynt-block-content-home">
    <div class="container">
      {% if title %}
      <div class="preContent">
        <p>{{ title|e }}</p>
      </div>
      {% endif %}
      <ul class="grid">
        {% for item in items %}
          <li class="grid-item">
            <a class="grid-item-image" title="{{ item.title }}" href="{{ item.link }}" aria-hidden="true" tabindex="-1">
              {% if item.thumbnail %}
              <div class="featuredImage">
                {{ renderComponent('BlockImage', { image: item.thumbnail, noComponentSpacing: true }) }}
              </div>
              {% endif %}
              <div class="grid-item-content">
                <p class="title">{{ item.title }}</p>
                <p class="subtitle">{{ item.duration }}</p>
              </div>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}
