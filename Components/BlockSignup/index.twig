<div class="flyntComponent componentSpacing flyntComponent--flynt-block-signup {{ options.theme }}" is="flynt-block-signup">
  <div class="container container--fullWidth">
    <div class="preContent">
    {% if image %}
      <img class="preContent-image lazyload"
        src="{{ image.src|resizeDynamic(424, 283) }}"
        srcset="{{ placeholderImage(3, 2) }}"
        data-srcset="
          {{ image.src|resizeDynamic(1920, 1280) }} 1920w,
          {{ image.src|resizeDynamic(1320, 880) }} 1320w,
          {{ image.src|resizeDynamic(1280, 853) }} 1280w,
          {{ image.src|resizeDynamic(1050, 700) }} 1050w,
          {{ image.src|resizeDynamic(750, 500) }} 750w,
          {{ image.src|resizeDynamic(600, 400) }} 600w,
          {{ image.src|resizeDynamic(424, 283) }} 424w,
          {{ image.src|resizeDynamic(312, 208) }} 312w"
        data-sizes="auto"
        alt="{{ image.alt|e }}">
    {% endif %}
    </div>
    <div class="content">
      <div class="content-left">{{ contentHtml|e('wp_kses_post') }}</div>
       <a class="button content-right" href="{{ button }}">Sign Up Now</a>
    </div>
  </div>
</div>
